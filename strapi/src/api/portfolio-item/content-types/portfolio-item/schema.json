{
  "kind": "collectionType",
  "collectionName": "portfolio_items",
  "info": {
    "singularName": "portfolio-item",
    "pluralName": "portfolio-items",
    "displayName": "Portfolio Item",
    "description": "Embroidery artwork portfolio items with multilingual support"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "story": {
      "type": "richtext",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "materials": {
      "type": "string",
      "required": false,
      "maxLength": 255,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "dimensions": {
      "type": "string",
      "required": false,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "dateCreated": {
      "type": "date",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "media": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images", "videos"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "seasonal": {
      "type": "boolean",
      "default": false,
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "published"],
      "default": "draft",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
