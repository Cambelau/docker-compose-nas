{
  "kind": "collectionType",
  "collectionName": "portfolio_items",
  "info": {
    "singularName": "portfolio-item",
    "pluralName": "portfolio-items",
    "displayName": "Portfolio Item",
    "description": "Embroidery artwork portfolio items with multilingual support"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "titre": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "histoire": {
      "type": "richtext",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "materiaux": {
      "type": "string",
      "required": false,
      "maxLength": 255,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "dimensions": {
      "type": "string",
      "required": false,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "dateCreation": {
      "type": "date",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "medias": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images", "videos"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "categorie": {
      "type": "enumeration",
      "enum": ["vetement", "art", "accessoires"],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "statut": {
      "type": "enumeration",
      "enum": ["exposition", "a-vendre", "vendu", "sur-commande"],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "collectionActuelle": {
      "type": "boolean",
      "default": false,
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "titre",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
